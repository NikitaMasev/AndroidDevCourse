<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_pattern"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_balance_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"

        android:textColor="@color/color_balance_total"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="14500 ла" />

    <TextView
        android:id="@+id/tv_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text_total_title"
        android:textColor="@color/color_balance_secondary_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_balance_total"
        app:layout_constraintStart_toStartOf="@+id/tv_balance_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance_total" />
    
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tv_balance_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/color_balance_expenses"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_title"
        tools:text="4500 ла" />

    <TextView
        android:id="@+id/tv_expense_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text_expense"
        android:textColor="@color/color_balance_secondary_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_balance_expenses"
        app:layout_constraintStart_toStartOf="@+id/tv_balance_expenses"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance_expenses" />

    <TextView
        android:id="@+id/tv_balance_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/color_balance_income"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_title"
        tools:text="19000 ла" />

    <TextView
        android:id="@+id/tv_income_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text_income"
        android:textColor="@color/color_balance_secondary_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_balance_income"
        app:layout_constraintStart_toStartOf="@+id/tv_balance_income"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance_income" />

    <com.nikitamasevgmail.moneytracker.view.DiagramView
        android:id="@+id/balance_diagram"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="?android:attr/actionBarSize"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expense_title" />

</android.support.constraint.ConstraintLayout>